{
	  "installCommand": "bun install",
  "buildCommand": "turbo run build --filter=website"
	"framework": "nextjs",
	"builds": [
			{
			"src": "apps/web/package.json",
			"use": "@vercel/next"
		},
		{
			"src": "packages/nestjs/dist/main.js",
			"use": "@vercel/node"
		}
	],
	"github": {
		"enabled": false
	},
	"outputDirectory": "apps/web/.next",
	"public": false,
	"regions": ["sin1"],
	"routes": [
		{
			"src": "^/api(?:/(.*))?$",
			"dest": "packages/nestjs/dist/main.js"
		},
		{
			"src": "/(.*)",
			"dest": "apps/web/$1"
		}
	],
	"version": 2
}
