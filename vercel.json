{
	"buildCommand": "turbo run build --filter=website",
	"builds": [
		{
			"src": "apps/web/package.json",
			"use": "@vercel/next",
      "config": {
        "buildCommand": "next build --turbopack",
      }
		},
		{
			"src": "packages/nestjs/dist/main.js",
			"use": "@vercel/node"
		}
	],
	"framework": "nextjs",
	"github": {
		"enabled": false
	},
	"installCommand": "bun install",
	"public": false,
	"regions": ["sin1"],
	"routes": [
		{
			"src": "^/api(?:/(.*))?$",
			"dest": "packages/nestjs/dist/main.js"
		},
		{
			"src": "/(.*)",
			"dest": "apps/web/$1"
		}
	],
	"version": 2
}
