{
	"name": "noto",
	"private": true,
	"type": "module",
	"workspaces": [
		"./apps/*",
		"./packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"build:pkg": "bunx turbo build --filter='./packages/*'",
		"clean": "bun --filter '*' clean",
		"db:build": "dotenv -e .env -- bun --filter '@noto/database' build",
		"db:pull": "dotenv -e .env -- bun --filter '@noto/database' pull",
		"db:push": "dotenv -e .env -- bun --filter '@noto/database' push",
		"deps:update": "bunx ncu -ws --root -u",
		"dev": "dotenv -e .env -- turbo run dev",
		"lint": "turbo run lint",
		"pre-commit": "bunx lint-staged --quiet",
		"pre-push": "bun --silent lint",
		"prepare": "is-ci || husky",
		"prettier": "prettier --write . --ignore-unknown"
	},
	"lint-staged": {
		"*": [
			"prettier --write --ignore-unknown"
		]
	},
	"devDependencies": {
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.25.0",
		"@types/bun": "1.2.10",
		"@types/node": "22.14.1",
		"dotenv-cli": "8.0.0",
		"eslint": "9.25.0",
		"eslint-config-prettier": "10.1.2",
		"eslint-plugin-prettier": "5.2.6",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"husky": "9.1.7",
		"is-ci": "4.1.0",
		"lint-staged": "15.5.1",
		"prettier": "3.5.3",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-sort-json": "4.1.1",
		"rimraf": "6.0.1",
		"turbo": "2.5.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.30.1"
	},
	"packageManager": "bun@1.2.10",
	"trustedDependencies": [
		"@nestjs/core",
		"@noto/database",
		"@prisma/client",
		"@prisma/engines",
		"@scarf/scarf",
		"@swc/core",
		"esbuild",
		"prisma",
		"sharp"
	]
}
